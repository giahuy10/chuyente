<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_RATE_FORM_LBL_DATE_CREATED_BY" description="COM_RATE_FORM_DESC_DATE_CREATED_BY" hidden="true" hint="COM_RATE_FORM_LBL_DATE_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_RATE_FORM_LBL_DATE_MODIFIED_BY" description="COM_RATE_FORM_DESC_DATE_MODIFIED_BY" hidden="true" hint="COM_RATE_FORM_LBL_DATE_MODIFIED_BY"/>
    <field name="date" type="calendar" class="inputbox" required="true" label="COM_RATE_FORM_LBL_DATE_DATE" description="COM_RATE_FORM_DESC_DATE_DATE" hint="COM_RATE_FORM_LBL_DATE_DATE"/>
    <field name="buy_rate" type="text" required="true" label="COM_RATE_FORM_LBL_DATE_BUY_RATE" description="COM_RATE_FORM_DESC_DATE_BUY_RATE" hint="COM_RATE_FORM_LBL_DATE_BUY_RATE"/>
    <field name="offer_rate" type="text" required="true" label="COM_RATE_FORM_LBL_DATE_OFFER_RATE" description="COM_RATE_FORM_DESC_DATE_OFFER_RATE" hint="COM_RATE_FORM_LBL_DATE_OFFER_RATE"/>
    <field name="time" type="list" required="true" label="COM_RATE_FORM_LBL_DATE_TIME" description="COM_RATE_FORM_DESC_DATE_TIME" hint="COM_RATE_FORM_LBL_DATE_TIME">
      <option value="1">COM_RATE_DATES_TIME_OPTION_1</option>
      <option value="2">COM_RATE_DATES_TIME_OPTION_2</option>
    </field>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
    <field name="filter_date_from_dateformat" label="COM_RATE_LIST_LBL_DATE_DATE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox"/>
    <field name="filter_date_to_dateformat" label="COM_RATE_LIST_LBL_DATE_DATE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox"/>
    <field name="filter_time" label="COM_RATE_FORM_LBL_DATE_TIME" type="list" onchange="this.form.submit();">
      <option value="1">COM_RATE_DATES_TIME_OPTION_1</option>
      <option value="2">COM_RATE_DATES_TIME_OPTION_2</option>
    </field>
  </fieldset>
</form>
